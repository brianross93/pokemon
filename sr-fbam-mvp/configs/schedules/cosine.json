{
  "description": "Cosine annealing sweep targeting low LR tail; backbone frozen for gate tuning.",
  "command": [
    "python",
    "-m",
    "src.training.train_battle_il",
    "--train",
    "<path-to-battle-train.jsonl>",
    "--val",
    "<path-to-battle-val.jsonl>",
    "--epochs",
    "8",
    "--batch-size",
    "64",
    "--lr",
    "0.0015",
    "--freeze-backbone",
    "--scheduler",
    "cosine",
    "--scheduler-total-epochs",
    "8",
    "--scheduler-min-lr",
    "0.00005",
    "--metrics-out",
    "results/calibration/cosine_metrics.json",
    "--preplan-checkpoint-out",
    "results/calibration/preplan_cosine.pt",
    "--postplan-checkpoint-out",
    "results/calibration/postplan_cosine.pt"
  ]
}
