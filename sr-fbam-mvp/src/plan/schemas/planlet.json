{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Planlet",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "kind"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "kind": {
      "type": "string",
      "enum": [
        "NAVIGATE_TO",
        "HEAL_AT_CENTER",
        "BUY_ITEM",
        "TALK_TO",
        "OPEN_MENU",
        "MENU_SEQUENCE",
        "USE_ITEM",
        "HANDLE_ENCOUNTER"
      ]
    },
    "args": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "target": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "map": {"type": "string"},
            "tile": {
              "type": "array",
              "items": {"type": "integer"},
              "minItems": 2,
              "maxItems": 2
            },
            "poi": {"type": "string"}
          },
          "anyOf": [
            {"required": ["map", "tile"]},
            {"required": ["map", "poi"]}
          ]
        },
        "item": {"type": "string"},
        "qty": {"type": "integer", "minimum": 1},
        "mode": {
          "type": "string",
          "enum": ["escape_or_fast_fight", "escape_only", "win_battle"]
        },
        "npc": {"type": "string"},
        "path": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 1
        },
        "buttons": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 1
        },
        "sequence": {
          "oneOf": [
            {
              "type": "array",
              "items": {"type": "string"},
              "minItems": 1
            },
            {
              "type": "string",
              "minLength": 1
            }
          ]
        }
      }
    },
    "pre": {
      "type": "array",
      "items": {"$ref": "#/definitions/condition"}
    },
    "post": {
      "type": "array",
      "items": {"$ref": "#/definitions/condition"}
    },
    "hints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "avoid": {
          "type": "array",
          "items": {"type": "string"}
        },
        "pathfind": {"type": "string"},
        "notes": {"type": "string"}
      }
    },
    "timeout_steps": {
      "type": "integer",
      "minimum": 1,
      "default": 600
    },
    "recovery": {
      "type": "array",
      "items": {"$ref": "#/definitions/recovery_action"}
    }
  },
  "definitions": {
    "condition": {
      "type": "object",
      "required": ["op"],
      "additionalProperties": false,
      "properties": {
        "op": {"type": "string"},
        "name": {"type": "string"},
        "value": {},
        "map": {"type": "string"},
        "tile": {
          "type": "array",
          "items": {"type": "integer"},
          "minItems": 2,
          "maxItems": 2
        },
        "poi": {"type": "string"},
        "path": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 1
        },
        "item": {"type": "string"}
      }
    },
    "recovery_action": {
      "type": "object",
      "required": ["on", "do"],
      "additionalProperties": false,
      "properties": {
        "on": {"type": "string"},
        "do": {
          "type": "string",
          "enum": ["CALL", "REPLAN", "ABORT"]
        },
        "planlet": {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind"],
          "properties": {
            "kind": {"type": "string"},
            "args": {"type": "object"}
          }
        }
      }
    }
  }
}
